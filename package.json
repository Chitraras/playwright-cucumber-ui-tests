{
  "name": "playwright-cucumber-ui-tests",
  "version": "1.0.0",
  "description": "A testing framework for UI testing using Playwright and Cucumber.",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js src/features/**/*.feature --require-module ts-node/register --require src/steps/**/*.ts --require src/support/**/*.ts",
    "test:tag": "cucumber-js src/features/**/*.feature --require-module ts-node/register --require src/steps/**/*.ts --require src/support/**/*.ts"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^14.18.63",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.0"
  },
  "cucumber": {
    "require": [
      "src/steps/**/*.ts",
      "src/support/**/*.ts"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
